@page
@model Accidentabilidad.Pages.Historico.HistorialModel
@{
}

<link href="~/css/historico.css" rel="stylesheet" />
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">

            <div class="row">
                <div class="col-md-12">
                    <h1 class="my-12 display-12 fw-bold ls-tight"> Control de cambios </h1>
                </div>
            </div>

            <div class="row">
                <div class="col-md-2">
                    <a class='btn btn-primary btn-sm' href='/Clients/Index'><i class="bi bi-skip-backward-fill"></i> Volver</a>
                </div>
                <div class="col-md-3 offset-7" style="justify-content:end">
                    <div class="input-group">
                        <div class="input-group-text"><i class="bi bi-search"></i></div>
                        <input type="text" class="form-control" id="myInput" onkeyup="Filtrar()" placeholder="Buscar">
                    </div>
                </div>
            </div>

            <div class="table-container">
                <div class="row">
                    <div class="col-md-12" style="padding-top:1rem">
                        <table id="myTable" class="table  table-sm table-bordered " style="padding-top:2rem">
                            <thead class="table-light">
                                <tr>
                                    <th>Folio</th>
                                    <th># Nomina</th>
                                    <th>Trabajador</th>
                                    <th>Area</th>
                                    <th>Atención</th>
                                    <th>Diagnostico</th>
                                    <th>Calificacion</th>
                                    <th>IPP</th>
                                    <th>Incapacidad inicial</th>
                                    <th>Inicio labores</th>
                                    <th>Dias subsidiados</th>
                                    <th>Reporta</th>
                                    <th>Fecha_modificacion</th>
                                    <th>Correo_login</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.listAccidentes)
                                {
                                    <tr>
                                        <td>@item.Folio</td>
                                        <td>@item.Nomina</td>
                                        <td>@item.Empleado</td>
                                        <td>@item.Area</td>
                                        <td>@item.Atencion</td>
                                        <td>@item.Diagnostico</td>
                                        <td>@item.Calificacion</td>
                                        <td>@item.IPP</td>
                                        <td>@item.Incapacidad_inicial</td>
                                        <td>@item.Inicio_labores</td>
                                        <td style="text-align: center;">@item.Dias_subsidiados</td>
                                        <td style="text-align: center;">@item.Reporta</td>
                                        <td>@item.Fecha_modificacion.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@item.Correo_login</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            @if (Model.errorMessage.Length > 0)
            {
                <div class="col-md-4 offset-4 alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>@Model.errorMessage</strong>
                    <button type="button" class='btn-close' data-bs-dismiss='alert' aria-label="Close"></button>
                </div>
            }

        </div>
    </div>
</div>











