@page
@model Accidentabilidad.Pages.Clients.IndexModel
@{
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registra nuevo accidente</title>
    <link href="~/css/index.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-3">
                        <h1 class="my-12 display-12 fw-bold ls-tight"> Bitacora de accidentes </h1>
                    </div>
                </div>
                @if (Model.errorMessage.Length > 0)
                {
                    <div class="row">
                        <div class="col-md-4 offset-4 alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>@Model.errorMessage</strong>
                            <button type="button" class='btn-close' data-bs-dismiss='alert' aria-label="Close"></button>
                        </div>
                    </div>
                }
                <div class="row" style="padding-top:1rem">
                    <div class="col-md-3">
                        <div class="row">
                            <div class="col-md-6">
                                <a class='btn btn-primary btn-sm' href='/Clients/Create' style="width:100%"><i class="bi bi-plus-lg"></i> Nuevo accidente</a>
                            </div>
                            <div class="col-md-6">
                                @if (Model.usuario.Rol == "1" || Model.usuario.Rol == "2" || Model.usuario.Rol == "3")
                                {
                                    <a class='btn btn-primary btn-sm' href="/Historico/Historial" style="width:100%"><i class="bi bi-hourglass-split"></i> Control de cambios</a>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 offset-6">
                        <button id="clearFiltersBtn" class="btn btn-primary btn-sm pull-right"><i class="bi bi-funnel-fill"></i> Limpiar Filtros</button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12" style="padding-top:1rem">
                        <div class="table-wrapper" id="tableWrapper">
                            <table id="myTable" class="table table-sm table-bordered" style="padding-top:2rem">
                                <thead class="table-light">
                                    <tr>
                                        <th>
                                            Fecha ocurrencia
                                            <br />
                                            <label>Desde:</label>
                                            <input type="date" id="filterStartDate" class="date-filter" />
                                            <br />
                                            <label>Hasta:</label>
                                            <input type="date" id="filterEndDate" class="date-filter" />
                                        </th>
                                        <th>Mes reporte<input type="text" class="filter-input" placeholder="Buscar Mes reporte" /></th>
                                        <th>Folio<input type="text" class="filter-input" placeholder="Buscar Folio" /></th>
                                        <th># Nomina<input type="text" class="filter-input" placeholder="Buscar # Nomina" /></th>
                                        <th>Trabajador<input type="text" class="filter-input" placeholder="Buscar Trabajador" /></th>
                                        <th>Area<input type="text" class="filter-input" placeholder="Buscar Area" /></th>
                                        <th>Atención<input type="text" class="filter-input" placeholder="Buscar Atención" /></th>
                                        <th>Diagnostico<input type="text" class="filter-input" placeholder="Buscar Diagnostico" /></th>
                                        <th>Calificacion<input type="text" class="filter-input" placeholder="Buscar Calificacion" /></th>
                                        <th>IPP<input type="text" class="filter-input" placeholder="Buscar IPP" /></th>
                                        <th>Incapacidad inicial<input type="text" class="filter-input" placeholder="Buscar Incapacidad inicial" /></th>
                                        <th>Inicio labores<input type="text" class="filter-input" placeholder="Buscar Inicio labores" /></th>
                                        <th>Dias subsidiados<input type="text" class="filter-input" placeholder="Buscar Dias subsidiados" /></th>
                                        <th>Reporta<input type="text" class="filter-input" placeholder="Buscar Reporta" /></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.listAccidentes)
                                    {
                                        <tr>
                                            <td>@item.Fecha_ocurrencia_text</td>
                                            <td>@item.Fecha_registro_reporte.ToString("dd/MM/yyyy")</td>
                                            <td>@item.Folio</td>
                                            <td>@item.Nomina</td>
                                            <td>@item.Empleado</td>
                                            <td>@item.Area</td>
                                            <td>@item.Atencion</td>
                                            <td>@item.Diagnostico</td>
                                            <td>@item.Calificacion</td>
                                            <td>@item.IPP</td>
                                            <td>@item.Incapacidad_inicial</td>
                                            <td>@item.Inicio_labores</td>
                                            <td style="text-align: center;">@item.Dias_subsidiados</td>
                                            <td style="text-align: center;">@item.Reporta</td>
                                            <td>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <a class='btn btn-primary btn-sm' href='/Clients/Edit?id=@item.ID'><i class="bi bi-pencil-fill"></i> Editar</a>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <a class='btn btn-danger btn-sm' href='/Clients/Eliminar?id=@item.ID' onclick="return confirm('¿Está seguro que desea eliminar?')"><i class="bi bi-trash-fill"></i> Eliminar</a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/Index.js"></script>
</body>
</html>


